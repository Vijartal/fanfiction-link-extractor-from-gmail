{
  "manifest_version": 3,
  "name": "Fanfic Link Resolver",
  "version": "4.0",
  "description": "Fetch SV/SB/QQ links, open them in a dedicated popup, track load status, and POST resolved URLs back. v4: create popup then add tabs to avoid stray tabs.",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Resolve Fanfic Links",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "progress.html",
        "progress.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}